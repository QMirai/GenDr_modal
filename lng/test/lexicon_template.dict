  gp = { id=Exp_COPULA_adj_que_V 		dia=1} // Il est possible que Paul voie le chat.
  lf = { name = Oper0
         value = être 
  }
}

"v_dt_DEFAULT": verb {
  gp = { id=NP_V_NP		dia=12} // Paul voit Marie.
}

"v_it_DEFAULT": verb {
  gp = { id=NP_V		dia=1} // Paul dort.
}

"être": verb {
  spos = copula
  gp = { id=COPULA		dia=12} // La ville est jolie.
}

